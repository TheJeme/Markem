<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Markem.VisualTest"
             BackgroundColor="#45aaf2"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <StackLayout IsVisible="True" VerticalOptions="CenterAndExpand">
            <Label Text="Visual Test"
                       HorizontalOptions="CenterAndExpand"
                       TextColor="White"
                       FontAttributes="Bold"
                       FontSize="36"
                       Margin="0,0,0,30"/>
            <Label Text="Test your visual memory with board of squares."                
                       HorizontalOptions="CenterAndExpand"
                       TextColor="White"
                       FontSize="16"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>